<h2>今人気のyoutuber::<%= @input %>のコラボチャンネル</h2>

<table class="table">
  <thead>
    <tr>
      <!-- <th scope="col">おすすめ順</th> -->
      <th scope="col"></th>
      <th scope="col">チャンネル名</th>
      <th scope="col">チャンネルへのリンク</th>
      <th scope="col">チャンネル詳細</th>
  </thead>
  <tbody>
    <% @return["ans"].each_with_index do |channel, index| %>
      <tr>
        <!-- <td scope="row"><%= index+1 %></td> -->
        <td><%= image_tag channel["thumbnail_url"], :alt => channel["channel_name"]+'のサムネイル画像' %></td>
        <td><%= channel["channel_name"] %></td>
        <td><%= link_to "here", channel["home_url"] %></td>
        <td><%= link_to "詳細", posts_details_path(id:k) %></td>
      </tr>
    <% end %>
  <br>
  </tbody>
</table>
<%= link_to "トップページに戻る", root_path %>

